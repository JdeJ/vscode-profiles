{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "es2018",
        "strict": true,
        "outDir": "./out",
        "lib": [
            "es2016",
            "es2017",
            "es2018",
            "es2019"
        ],
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/index.ts",
        "test/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
