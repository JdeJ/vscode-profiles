  // Keep Extensions Updated
  "extensions.autoCheckUpdates": true,
  "extensions.autoUpdate": true,

  // General Editor Settings
  "editor.minimap.enabled": false,
  "editor.matchBrackets": "always",
  "editor.suggestSelection": "first",
  "editor.autoClosingBrackets": "always",
  // "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  // "editor.acceptSuggestionOnEnter": "off",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.cursorBlinking": "smooth",
  "editor.cursorStyle": "block",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.hover.delay": 600,
  // "editor.multiCursorModifier": "ctrlCmd",
  // "editor.multiCursorPaste": "full",
  "editor.scrollBeyondLastLine": false,
  "editor.maxTokenizationLineLength": 40000,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.tabSize": 2,
  "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
  "editor.accessibilitySupport": "off",
  "editor.largeFileOptimizations": false,
  "security.workspace.trust.untrustedFiles": "open",
  "git.inputValidationLength": 200,
  "git.inputValidationSubjectLength": 100,
  "diffEditor.codeLens": true,
  "search.searchEditor.defaultNumberOfContextLines": 10,
  "search.searchEditor.doubleClickBehaviour": "openLocationToSide",

  // Appearance
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "workbench.settings.editor": "json",
  "workbench.statusBar.visible": true,
  "workbench.sideBar.location": "left",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.decorations.badges": false,
  "window.zoomLevel": 1,

  //Terminal Settings
  "terminal.integrated.fontFamily": "MesloLGS NF",

  // Emmet Settings
  "emmet.includeLanguages": {
    "erb": "html",
    "javascript": "javascriptreact",
    "page": "html"
  },
  "emmet.triggerExpansionOnTab": true,
  "emmet.showAbbreviationSuggestions": true,

  // Breadcrumbs Settings
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",

  // Git Lens Settings
  "gitlens.defaultDateStyle": "absolute",
  "gitlens.statusBar.enabled": true,
  "gitlens.hovers.annotations.over": "annotation",
  "gitlens.hovers.currentLine.over": "line",
  "git.autofetch": true,
  "gitlens.gitCommands.skipConfirmations": [
    "fetch:command",
    "stash-push:command",
    "switch:command",
    "push:command"
  ],
  "gitlens.blame.format": "${author} ${authorAgo|20-}",
  "gitlens.blame.avatars": false,
  
  // ESLint Settings
  "eslint.format.enable": true,
  "eslint.packageManager": "yarn",
  "eslint.validate": [
    "javascript",
    "javascriptreact"
  ],
  "eslint.alwaysShowStatus": true,
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "eslint.codeActionsOnSave.mode": "all",

  // javascript
  // "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
  "javascript.preferences.quoteStyle": "single",
  "javascript.suggest.completeFunctionCalls": true,
  "javascript.updateImportsOnFileMove.enabled": "never",

  // json
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "json.maxItemsComputed": 15000,  
}